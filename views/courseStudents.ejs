<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Students in <%= courseName %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <h2>ğŸ“š Students Enrolled in "<%= courseName %>"</h2>

    <!-- Teachers Section -->
    <div class="mt-4">
      <h4>ğŸ‘¨â€ğŸ« Assigned Teachers:</h4>
      <% if (teachers && teachers.length > 0) { %>
        <ul class="list-group">
          <% teachers.forEach(teacher => { %>
            <li class="list-group-item"><%= teacher.name %></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-muted">No teachers assigned for this course.</p>
      <% } %>
    </div>

    <!-- Students Section -->
    <div class="mt-5">
      <h4>ğŸ‘¥ Enrolled Students:</h4>
      <% if (students && students.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover mt-2">
            <thead class="table-light">
              <tr>
                <th>#ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(student => { %>
                <tr>
                  <td><%= student.id %></td>
                  <td><%= student.name %></td>
                  <td><%= student.email %></td>
                  <td><%= student.phone %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <p class="text-muted">No students enrolled in this course.</p>
      <% } %>
    </div>

    <div class="mt-4">
      <a href="/courses" class="btn btn-secondary">â† Back to Courses</a>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
