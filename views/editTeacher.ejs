<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Teacher</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <h2>Edit Teacher</h2>

    <form action="/teachers/edit/<%= teacher.id %>" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="name" class="form-label">Teacher Name:</label>
        <input type="text" name="name" id="name" class="form-control" value="<%= teacher.name %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Assigned Courses:</label><br>
        <% if (courses && courses.length > 0) { %>
          <% courses.forEach(course => { %>
            <div class="form-check form-check-inline">
              <input class="form-check-input" 
                     type="checkbox" 
                     name="course_ids" 
                     value="<%= course.id %>" 
                     <%= assignedCourseIds.includes(course.id) ? 'checked' : '' %>>
              <label class="form-check-label"><%= course.name %></label>
            </div>
          <% }); %>
        <% } else { %>
          <p class="text-muted">No courses available.</p>
        <% } %>
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/teachers" class="btn btn-secondary">Cancel</a>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
