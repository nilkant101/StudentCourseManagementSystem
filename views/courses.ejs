<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Courses</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Courses</h2>
      <a href="/courses/add" class="btn btn-success">+ Add Course</a>
    </div>

    <% if (courses.length === 0) { %>
      <div class="alert alert-warning">No courses found.</div>
    <% } else { %>
      <table class="table table-bordered table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Course Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course => { %>
            <tr>
              <td><%= course.id %></td>
              <td><%= course.name %></td>
              <td>
                <form action="/courses/delete/<%= course.id %>" method="POST" style="display:inline-block;">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this course?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
